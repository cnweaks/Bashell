<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ToolbarItemStyle" >
       <item name="android:gravity">center</item>
       <item name="android:padding">3dp</item>
       <item name="android:textSize">16dp</item>
       <item name="android:clickable">true</item>
        <item name="android:labelTextSize">12dp</item>
        <item name="android:keyTextSize">16dp</item>
       <item name="android:background">@drawable/item_click_selector</item>
    </style>
    <style name="sliding_menu_text">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="black_large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="black_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="question_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="keyboard_btn">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/keyboard_btn</item>
    </style>

    <style name="lightboxButton">
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#75000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:height">1dp</item>
    </style>
    <style name="lightboxButton.Grey">
        <item name="android:background">@drawable/btn_grey</item>
    </style>
</resources>
